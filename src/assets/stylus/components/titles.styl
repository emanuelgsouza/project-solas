.section__title,
.section__subtitle {
  font-family 'UnifrakturMaguntia', cursive
  text-align center
  margin $space-sm 0
}

.section__title {
  font-size 2.4em
}

.section__subtitle {
  font-size 2em
}

blockquote {
  font-family 'Trocchi', serif
  max-width 800px
  margin 0 auto
  font-style italic
  border-left 5px solid #FFF
  padding $space
  background-color lightness(#FFF, 95%)
}
