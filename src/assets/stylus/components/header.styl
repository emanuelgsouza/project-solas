.container_images {

  @media (min-width $tablet + 1px) {
    display none
  }

  @media (max-width: $tablet) {
    position absolute
    left 0
    bottom 0
    display block
    display flex
    margin-top $space
  }
}

.church,
.solas {
  flex-grow 1
}

.header {
  .title,
  .subtitle {
    font-family 'UnifrakturMaguntia', cursive
    color #fff
    text-shadow 0px 4px 2px rgba(150, 150, 150, 0.6)
  }

  .container_title {
    max-width 600px
    text-align right
    margin-right $space

    @media (min-width $tablet + 1px) {
      display none
    }

    @media (max-width: $tablet) {
      position absolute
      right 0
      top 0
      display block
    }
  }

  .title {
    font-size 3.6em
  }

  .subtitle {
    font-size 3em
  }
}
