.container_images {
  max-width 600px
  display flex
  margin-top $space

  @media (min-width: 600px) {
    position absolute
    left 0
    bottom 0
  }
}

.church,
.solas {
  max-width 300px
  flex-grow 1
}

.header {
  .title,
  .subtitle {
    font-family 'UnifrakturMaguntia', cursive
    color #fff
    text-shadow 0px 4px 2px rgba(150, 150, 150, 0.6)
  }

  .container_title {
    max-width 600px
    text-align right
    margin-right $space

    @media (min-width: 600px) {
      position absolute
      right $space-sm
    }
  }

  .title {
    font-size 3.6em
  }

  .subtitle {
    font-size 3em
  }
}
