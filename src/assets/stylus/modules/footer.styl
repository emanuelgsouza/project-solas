.footer {
  width 100%
  background-color #FFF
  padding $space

  .footer__title {
    font-size 1.6rem
    text-align center
    margin-bottom $space-sm
  }

  .logos {
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
  }

  .logo__figure {
    max-width 200px
    margin 0 $space

    &.jubanoc {
      max-width 150px
    }
  }
}
